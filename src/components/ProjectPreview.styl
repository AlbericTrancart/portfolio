.ProjectPreview
    padding-top: 56.25% // 16/9 ratio
    position: relative

    &__image
        background-position: center
        background-repeat: no-repeat
        background-size: cover
        filter: blur(1px)
        left: 0
        position: absolute
        top: 0

        &:after
            background-color: black
            content: ''
            height: 100%
            left: 0
            opacity: .5
            position: absolute
            top: 0
            width: 100%

    &__title.Link
        color: white
        height: 100%
        position: absolute
        text-align: center
        top: 0
        width: 100%
